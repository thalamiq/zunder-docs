{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Zunder",
  "colors": {
    "primary": "#4076B9",
    "light": "#4076B9",
    "dark": "#4076B9"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "getting-started/index",
              "getting-started/quickstart",
              "getting-started/configuration",
              "getting-started/fhir-primer"
            ]
          },
          {
            "group": "Server",
            "pages": [
              {
                "group": "Core Operations",
                "pages": [
                  "server/crud-operations",
                  "server/search",
                  "server/batch-and-transactions",
                  "server/versioning-history",
                  "server/operations"
                ]
              },
              {
                "group": "Data & Access",
                "pages": [
                  "server/compartments",
                  "server/referential-integrity",
                  "server/indexing"
                ]
              },
              {
                "group": "Packages & Hooks",
                "pages": ["server/packages", "server/hooks"]
              },
              {
                "group": "Advanced",
                "pages": [
                  "server/performance",
                  "server/security",
                  "server/audit-logs"
                ]
              },
              {
                "group": "Deployment",
                "pages": ["deployment/docker", "deployment/database"]
              },
              {
                "group": "Admin UI",
                "pages": ["ui/overview"]
              }
            ]
          }
        ]
      },

      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication",
              "api-reference/errors",
              "api-reference/content-negotiation"
            ]
          },
          {
            "group": "Metadata",
            "pages": ["api-reference/metadata/capability-statement"]
          },
          {
            "group": "CRUD Operations",
            "pages": [
              "api-reference/endpoint/create",
              "api-reference/endpoint/read",
              "api-reference/endpoint/update",
              "api-reference/endpoint/patch",
              "api-reference/endpoint/delete"
            ]
          },
          {
            "group": "Search",
            "pages": [
              "api-reference/search/system",
              "api-reference/search/type",
              "api-reference/search/compartment"
            ]
          },
          {
            "group": "History & Versioning",
            "pages": [
              "api-reference/history/system",
              "api-reference/history/type",
              "api-reference/history/resource",
              "api-reference/history/versioned-read"
            ]
          },
          {
            "group": "Batch & Transaction",
            "pages": [
              "api-reference/batch/transaction",
              "api-reference/batch/batch"
            ]
          },
          {
            "group": "Operations",
            "pages": [
              "api-reference/operations/system",
              "api-reference/operations/type",
              "api-reference/operations/instance"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/thalamiq/zunder",
          "icon": "github"
        },
        {
          "anchor": "FHIR Specification",
          "href": "https://hl7.org/fhir/",
          "icon": "book-open"
        }
      ]
    }
  },
  "logo": {
    "light": "/logos/zunder.svg",
    "dark": "/logos/zunder.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/thalamiq/zunder"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "links": [
      {
        "header": "By ThalamiQ",
        "items": [
          {
            "label": "thalamiq.io",
            "href": "https://thalamiq.io"
          },
          {
            "label": "GitHub",
            "href": "https://github.com/thalamiq/zunder"
          }
        ]
      }
    ],
    "socials": {
      "github": "https://github.com/thalamiq/zunder",
      "website": "https://thalamiq.io"
    }
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/getting-started/index"
    }
  ],
  "api": {
    "playground": {
      "display": "interactive",
      "proxy": true
    },
    "examples": {
      "languages": ["curl", "python", "javascript"],
      "defaults": "required",
      "prefill": true
    }
  }
}
